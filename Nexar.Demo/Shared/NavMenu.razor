@if (AppData.TreeItems is null)
{
    <MudNavMenu>
        <MudNavLink Href="" Icon=@Icons.Material.Filled.Login>Connect</MudNavLink>
    </MudNavMenu>
}
else
{
    <MudContainer>
        <MudTreeView T=TreeItem
                     Items=AppData.TreeItems
                     ServerData=ServerData
                     Dense=true
                     SelectedValueChanged=SelectedValueChanged>
            <ItemTemplate>
                <MudTreeViewItem Value=@context.Value Text=@context.Text Icon=@context.Icon CanExpand=@context.Expandable />
            </ItemTemplate>
        </MudTreeView>
    </MudContainer>
}
