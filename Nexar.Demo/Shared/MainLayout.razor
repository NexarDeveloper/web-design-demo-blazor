@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudPopoverProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation=0>
        <MudStack Row=true AlignItems=AlignItems.Center>
            <MudIconButton Icon=@Icons.Material.Filled.Menu Color=Color.Inherit Edge=Edge.Start OnClick=@(e => DrawerToggle()) />
            <MudHidden Breakpoint=Breakpoint.Xs>
                <MudText Typo=Typo.h6>Nexar.Design Demo</MudText>
            </MudHidden>
        </MudStack>
        <MudSpacer />
        <MudStack Row=true AlignItems=AlignItems.Center>
            <MudHidden Breakpoint=Breakpoint.Xs>
                @if (AppData.WorkspaceUrl is { })
                {
                    <MudLink Href=@AppData.WorkspaceUrl Color=Color.Inherit Underline=Underline.Always Target="_blank">@AppData.WorkspaceUrl</MudLink>
                }
                <MudLink Href=@AppData.ApiEndpoint Color=Color.Inherit Underline=Underline.Always Target="_blank">@AppData.ApiEndpoint</MudLink>
            </MudHidden>
        </MudStack>
        <MudTooltip Text="Source code">
            <MudIconButton Icon=@Icons.Custom.Brands.GitHub Color=Color.Inherit Href="https://github.com/NexarDeveloper/web-design-demo-blazor" Target="_blank" />
        </MudTooltip>
        <MudTooltip Text="Nexar API">
            <MudIconButton Icon=@Icons.Material.Filled.AccountTree Color=Color.Inherit Href=@AppData.VoyagerEndpoint Target="_blank" />
        </MudTooltip>
        <MudTooltip Text="Nexar home">
            <MudIconButton Icon=@Icons.Material.Filled.Home Color=Color.Inherit Href=@AppData.NexarDotCom Target="_blank" />
        </MudTooltip>
    </MudAppBar>
    <MudDrawer Width=500px @bind-Open=@_drawerOpen ClipMode="DrawerClipMode.Always" Elevation=1>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth=MaxWidth.Large>
            @Body
            <br />
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
