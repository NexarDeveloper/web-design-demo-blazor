
<MudText Typo="Typo.h4">@Text</MudText>

@if (Item is not null)
{
    <MudText Typo="Typo.subtitle1">@Item.Path</MudText>
}

@if (Item?.Error is not null)
{
    <MudAlert Severity="Severity.Error">
        @(Item.Error.Message)
    </MudAlert>
}

@code {
    [Parameter]
    public string? Text { get; init; }

    [Parameter]
    public TreeItem? Item { get; init; }
}
