@page "/wipVariant"
@inherits AbstractPage

@if (WipVariantItem.Current is not null)
{
    <ItemPageHeader Text="Variant" Item=@WipVariantItem.Current />

    <TextField Label="Name" Text="@WipVariantItem.Current.Tag.Name" />

    <TextFieldCopy Label="Bom.Id" Text="@WipVariantItem.Current.Tag.Bom.Id" />

    <br />
    <AlertGraphQL Files="Project.WipVarians.graphql" />
}

@code {
    protected override void OnInitialized()
    {
        WipVariantItem.OnChange += StateHasChanged;
    }

    protected override void Disposing()
    {
        WipVariantItem.OnChange -= StateHasChanged;
    }
}
