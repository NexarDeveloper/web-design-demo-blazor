@page "/wipVariant"
@inherits AbstractPage
@implements IDisposable

@if (WipVariantItem.Current != null)
{
    <ItemPageHeader Text="Variant" Item=@WipVariantItem.Current />

    <MudTextField T="string" Label="Name" Text="@WipVariantItem.Current.Tag.Name" ReadOnly="true" Variant="Variant.Outlined" />

    <TextFieldCopy Label="Bom.Id" Text="@WipVariantItem.Current.Tag.Bom.Id" />
}

@code {
    protected override void OnInitialized()
    {
        WipVariantItem.OnChange += Update;
    }

    public void Dispose()
    {
        WipVariantItem.OnChange -= Update;
    }

    void Update()
    {
        StateHasChanged();
    }
}
