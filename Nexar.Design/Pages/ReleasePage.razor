@page "/release"
@inherits AbstractPage

@if (ReleaseItem.Current is not null)
{
    <ItemPageHeader Text="Release" Item=@ReleaseItem.Current />

    <TextFieldCopy Label="Id" Text=@ReleaseItem.Current.Tag.Id />

    <TextFieldCopy Label="ReleaseId" Text=@ReleaseItem.Current.Tag.ReleaseId />

    <TextFieldText Label="Description" Text=@ReleaseItem.Current.Tag.Description />

    <TextField Label="CreatedAt" Text=@ReleaseItem.Current.Tag.CreatedAt.ToString() />

    <br />
    <AlertGraphQL Files="Project.Releases.graphql" />
}

@code {
    protected override void OnInitialized()
    {
        ReleaseItem.OnChange += StateHasChanged;
    }

    protected override void Disposing()
    {
        ReleaseItem.OnChange -= StateHasChanged;
    }
}
