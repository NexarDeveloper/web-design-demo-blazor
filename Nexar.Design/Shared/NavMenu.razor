@if (AppData.TreeItems is null)
{
    <MudNavMenu>
        <MudNavLink Href="" Match=NavLinkMatch.All Icon=@Icons.Material.Filled.Login>Connect</MudNavLink>
    </MudNavMenu>
}
else
{
    <MudContainer>
        <MudText>Workspaces</MudText>
        <MudTreeView T=TreeItem
                 Items=AppData.TreeItems
                 ServerData=ServerData
                 Dense=true
                 CanActivate=true
                 ActivatedValueChanged=ActivatedValueChanged>
            <ItemTemplate>
                <MudTreeViewItem Value=@context Text=@context.Text Icon=@context.Icon />
            </ItemTemplate>
        </MudTreeView>
    </MudContainer>
}
