@if (AppData.TreeItems == null)
{
    <MudNavMenu>
        <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Filled.Login">Connect</MudNavLink>
    </MudNavMenu>
}
else
{
    <MudContainer>
        <MudText>Workspaces</MudText>
        <MudTreeView T="TreeItem" Items="AppData.TreeItems" Dense="true" CanActivate="true"
                     ActivatedValueChanged="ActivatedValueChanged" ServerData="ServerData">
            <ItemTemplate>
                <MudTreeViewItem Value="@context" Text="@context.Text" Icon="@context.Icon" />
            </ItemTemplate>
        </MudTreeView>
    </MudContainer>
}
