@if (AppData.TreeItems == null)
{
    <MudNavMenu>
        <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Filled.Login">Connect</MudNavLink>
    </MudNavMenu>
}
else
{
    <MudContainer>
        <MudBadge>Workspaces</MudBadge>
        <MudTreeView T="TreeItem" Items="AppData.TreeItems" Dense="true" CanActivate="true"
                     ActivatedValueChanged="ActivatedValueChanged" ServerData="ServerDataAsync">
            <ItemTemplate>
                <MudTreeViewItem Value="@context" Items="@context.Items" Text="@context.Text" Icon="@context.Icon" />
            </ItemTemplate>
        </MudTreeView>
    </MudContainer>
}
